import java.io.IOException;
import java.lang.reflect.Field;

public class RobotProgram
{
	
	private Robot robot;
	private AutoClicker autoClick;
	private Runtime runtime;
	
	public void drawSine() 
	{
		int xSet = 800;
		int ySet = 400;
		int x = 0;
